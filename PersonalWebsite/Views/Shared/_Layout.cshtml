<html>
<head>
    <title>Dudziak Thomas</title>

    <link rel="stylesheet" href="./css/Layout.css" />
    @RenderSection("Styles", required: false)

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    @RenderSection("HeaderScripts", required: false)

    <link rel="icon" href="./favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="./favicon.svg">
    <link rel="icon" type="image/svg" href="./favicon.svg" sizes="32x32">
    <link rel="icon" type="image/svg" href="./favicon.svg" sizes="16x16">
    <link rel="mask-icon" href="./favicon.svg" color="#5bbad5">

    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <header>  
        <input id="nav-trigger" type="checkbox" />
        
        <div class="topbar"> 
            <div class="hamburger-container">                
                <label for="nav-trigger" class="hamburger-lines">
                      <span class="line line1"></span>
                      <span class="line line2"></span>
                      <span class="line line3"></span>
                </label>
            </div>
            
            <div class="topbar__content">
                <div class="topbar__content__name">
                    <span class="my-name">Dudziak Thomas</span>
                </div>
            </div>
        </div>
        
        <nav class="navigation">
            <ul class="navigation__links">
                <li class="navigation__links__link active"><a href="#">Home</a></li>
                <!--<li class="navigation__links__link"><a href="#">Blog</a></li>
                <li class="navigation__links__link"><a href="#">Photos</a></li>-->
            </ul>
        </nav>
    </header>
    
    <main>
        @RenderBody()
    </main>

    <footer class="footer">
        <p class="footer__copyright">© Dudziak Thomas @DateTime.UtcNow.Year</p>
    </footer>

    @RenderSection("BodyScripts", required: false)
</body>
</html>